# MinerU API 配置（Magic-PDF）
# 获取 API 密钥：https://mineru.net/
MINERU_API_KEY=your_mineru_api_key_here
MINERU_API_BASE_URL=https://mineru.net
MINERU_TIMEOUT=300
MINERU_POLL_INTERVAL=5
MINERU_MAX_POLL_ATTEMPTS=60

# LLM 配置（统一使用 OpenAI Python SDK）
# 你可以使用 OpenAI 官方端点，也可以使用任意“OpenAI 兼容”的自定义端点（例如公司网关/私有部署）。
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
# 自定义 API 端点（可选）。常见写法需要带 /v1，例如：https://api.openai.com/v1
# OPENAI_BASE_URL=https://api.openai.com/v1

# 视觉模型（图片转文本；用于把图片信息注入到文段中，便于 RAG 检索）
# 默认情况下，如果不设置 OPENAI_VISION_MODEL，则使用 OPENAI_MODEL
OPENAI_VISION_MODEL=gpt-4o
OPENAI_VISION_DETAIL=low
OPENAI_VISION_MAX_TOKENS=800

# 默认管道分片（token）
CHUNK_SOFT_LIMIT=800
CHUNK_HARD_LIMIT=2000

# 功能开关
ENABLE_CHART_TO_TEXT=true
ENABLE_SEMANTIC_ENHANCEMENT=true
ENABLE_METADATA_INJECTION=true
